<section style="padding: 10px;">
   <!--Slide Images-->
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" style="width: 100%; border-radius: 3px;" src="/slide-images/IMG_20210809_091748.jpg" alt="Myecart">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" style=" width: 100%; border-radius: 3px;" src="/slide-images/01_21st_Pantry-pc1x_CB666446734_.jpg" alt="Second slide">
    </div>
    
        <div class="carousel-item">
      <img class="d-block " style=" width: 100%;  border-radius: 3px;" src="/slide-images/side.jpg" alt="Third slide">
    </div>      
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>

<section>
   <div class="container-fluid mt-3">
      <h5 style="color: #696969;"> <b>Category</b></h5>
      <div class="row scrollmenu">
         <div class="col-md-12">
            {{#each categories}}
            <a href="/category-page/{{this._id}}" style="text-decoration:none; color:black;">
               <div class="card align-items-center text-center mr-3" style="width:6rem; height:5rem; display:inline-block;">
                  <img class="mt-1" src="/category-images/{{this._id}}.jpg" alt="{{this.name}}" style="height:3rem; width:3rem;"><br>
                  <p class="limit-line-length"><small class="card-title font-weight-bold mt-1">{{this.name}}</small></p>
               </div>
            </a>
            {{/each}}
         </div>
      </div>
   </div>
</section>


<section>
   <!--Product Display-->
   <div class="container-fluid mt-3">
      {{#each categories}}
      <h5 class="limit-line-length"> <b  style="color: #696969;">{{this.name}}</b></h5>
      <div class="row">
         {{#each product}}
         <div class="col-6 col-md-2 pb-4">
            <a href="/product-page/{{this._id}}" style="text-decoration:none; color:black;">
            <div class="card align-items-center text-center">
               <img class="mt-3" src="/product-images/{{this._id}}.jpg" style="height:6rem; width:6rem;">
               <div class="card-body">
                  <div style="height:2.7em; width:7em;">
                     <h6 class="card-title product-title">{{this.Name}}</h6>
                  </div>
                  <h6 class="card-text text-success limit-line-length" style="max-width:7em;">â‚¹{{this.Price}}</h6>
               <!--  <p class="card-text">{{this.description}}</p> -->
             </a>
                 <button class="btn btn-primary mt-2" onclick="addToCart('{{this._id}}')" style="width:7em;height:auto">Add to Cart</button>
             </div>
            </div>
         </div>
         {{/each}}
      </div>
      {{/each}}
   </div>
    
</section>
