<section>
   <div class="container-fluid mt-3">
      <div class="row scrollmenu">
         <div class="col-md-12">
            {{#each categories}}
           
               <div class="card align-items-center text-center mr-3" style="width:6rem; height:5rem; display:inline-block;">
                  <img class="mt-1" src="/category-images/{{this._id}}.jpg" alt="{{this.name}}" style="height:3rem; width:3rem;"><br>
                  <small class="card-title font-weight-bold mt-1">{{this.name}}</small>
               </div>
           
            {{/each}}
         </div>
      </div>
   </div>
</section>

<section>
   <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block" src="/slide-images/IN_GWD_Covid19_CustomerMsg_MH_ENG_1x_v1._CB669806110_.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block  " src="/slide-images/01_21st_Pantry-pc1x._CB666446734_.jpg">
    </div>
    <div class="carousel-item">
      <img class="d-block" style="height: 50%; width: 100%;" src="/slide-images/May_SMP_Lifestyle_1X_atHome._CB666179738_.jpg">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>
<section>
   <div class="container-fluid mt-3">
      {{#each categories}}
      <h5>{{this.displayName}}</h5>
      <div class="row">
         {{#each product}}
         <div class="col-6 col-md-2 pb-4">
           
            <div class="card align-items-center text-center">
               <img class="mt-3" src="/product-images/{{this._id}}.jpg" alt="{{this.name}}" style="height:5rem; width:5rem;">
               <div class="card-body">
                  <h6 class="card-title" style="height:2em;">{{this.Name}}</h6>
                  <h6 class="card-text text-success">â‚¹{{this.Price}}</h6>
              
                 
                  <button class="btn btn-primary mt-2" onclick="addToCart('{{this._id}}')" style="width:7em;height:auto">Add to Cart</button>
                  
                  
               </div>
            </div>
         </div>
         {{/each}}
      </div>
      {{/each}}
   </div>
</section>