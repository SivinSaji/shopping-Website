<section>
	<h2 class="text-center">All Products</h2>
<div class="container-fluid mt-4">
        <div>
            <a href="admin/add-product" class="btn btn-primary float-end mb-1">Add Product</a>
        </div>
        <div class="table-responsive-md mt-2">
            <table class="table responsive" id="productsTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr class="align-middle">
                        <th scope="row">{{@index}}</th>
                        <td>{{this.Name}}</td>
                        <td>{{this.Price}}</td>
                        <td><img style="width:30px; height:50px;"" src="/product-images/{{this._id}}.jpg" alt=""></td>
                        <td>
        <a href="/admin/edit-product/{{this._id}}" class="large-device1 btn btn-primary">Edit</a>
        <a href="/admin/edit-product/{{this._id}}" class="small-device1 btn btn-primary  mb-1"><i class="fas fa-edit"></i></a>
         <a href="/admin/delete-product/{{this._id}}" class="large-device1 btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.Name}}?')">Delete</a>
         <a href="/admin/delete-product/{{this._id}}" class="small-device1 btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.Name}}?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                       
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>